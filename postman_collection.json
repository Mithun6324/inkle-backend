{
  "info": {
    "name": "Inkle Backend Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"alice\",\"email\":\"alice@example.com\",\"password\":\"secret\"}"
        },
        "url": {"raw":"{{baseUrl}}/api/users/signup","host":["{{baseUrl}}"], "path":["api","users","signup"]}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\"username\":\"alice\",\"email\":\"alice@example.com\",\"password\":\"secret\"}"},
        "url": {"raw":"{{baseUrl}}/api/users/login","host":["{{baseUrl}}"], "path":["api","users","login"]}
      }
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}],
        "body": {"mode":"raw","raw":"{\"content\":\"Hello world\"}"},
        "url": {"raw":"{{baseUrl}}/api/posts/","host":["{{baseUrl}}"], "path":["api","posts",""]}
      }
    },
    {
      "name": "Get Feed",
      "request": {
        "method": "GET",
        "header":[{"key":"Authorization","value":"Bearer {{token}}"}],
        "url":{"raw":"{{baseUrl}}/api/posts/","host":["{{baseUrl}}"],"path":["api","posts",""]}
      }
    },
    {
      "name": "Global Activities",
      "request": {
        "method": "GET",
        "header":[{"key":"Authorization","value":"Bearer {{token}}"}],
        "url":{"raw":"{{baseUrl}}/api/activities/global","host":["{{baseUrl}}"],"path":["api","activities","global"]}
      }
    }
  ],
  "variable":[
    {"key":"baseUrl","value":"http://localhost:8000"},
    {"key":"token","value":""}
  ]
}
